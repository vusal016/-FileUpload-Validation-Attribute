@model Genre

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Genre Details</h3>
                    <div>
                        <a asp-area="Manage" asp-controller="Genre" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-area="Manage" asp-controller="Genre" asp-action="Index" class="btn btn-sm btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">ID:</label>
                                <p class="form-control-plaintext">@Model.Id</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Name:</label>
                                <p class="form-control-plaintext">@Model.Name</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Genre information display</small>
                </div>
            </div>
        </div>
    </div>
</div>
