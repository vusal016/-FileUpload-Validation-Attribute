@model List<Book>
@foreach (var book in Model)
{
    <div class="single-slide">
        <div class="product-card">
            <div class="product-header">
                <a href="#" class="author">
                    @(book.Author != null ? book.Author.Name : "Unknown Author")
                </a>
                <h3>
                    <a asp-controller="book" asp-action="detail" asp-route-id="@book.Id">
                        @book.Title
                    </a>
                </h3>
            </div>
            <div class="product-card--body">
                <div class="card-image">
                    <img src="@Url.Content("~/assets/image/products/" + book.MainImageUrl)" alt="">
                    <div class="hover-contents">
                        <a asp-controller="book" asp-action="detail" asp-route-id="@book.Id" class="hover-image">
                            <img src="@Url.Content("~/assets/image/products/" + book.HoverImageUrl)" alt="">
                        </a>
                        <div class="hover-btns">
                            <a asp-controller="cart" asp-action="add" asp-route-id="@book.Id" class="single-btn">
                                <i class="fas fa-shopping-basket"></i>
                            </a>
                            <a asp-controller="wishlist" asp-action="add" asp-route-id="@book.Id" class="single-btn">
                                <i class="fas fa-heart"></i>
                            </a>
                            <a asp-controller="compare" asp-action="add" asp-route-id="@book.Id" class="single-btn">
                                <i class="fas fa-random"></i>
                            </a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#quickModal" class="single-btn">
                                <i class="fas fa-eye"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="price-block">
                    <span class="price">£@((book.Price - (book.Price * book.DiscountPercentage / 100)).ToString("0.00"))</span>
                    @if (book.DiscountPercentage > 0)
                    {
                        <del class="price-old">£@book.Price.ToString("0.00")</del>
                        <span class="price-discount">@book.DiscountPercentage.ToString("0.##")%</span>
                    }
                </div>
            </div>
        </div>
    </div>
}
    